<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.cvtc.capstone.vehiclemaintenancetracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.VehicleMaintenanceTracker">

        <meta-data
            android:name="android.app.searchable"
            android:resource="@xml/searchable" />

        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".VehicleOptionActivity"
            android:label="@string/optionActivity_title" />
        <activity
            android:name=".LogActivity"
            android:label="@string/maintenanceActivity_title" />
        <activity
            android:name=".IssueActivity"
            android:label="@string/issueActivity_title" />
        <activity
            android:name=".VehicleSettingsActivity"
            android:label="@string/vehicleSettingsActivity_title" />
        <activity
            android:name=".IssueSettingsActivity"
            android:label="@string/issueSettings_appTitle" />
        <activity
            android:name=".MaintenanceLogSettingsActivity"
            android:label="@string/optionActivity_maintenanceTitle" />

    </application>

</manifest>